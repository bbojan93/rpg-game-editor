<% if character_attribute.errors.any? %>
  <h2>The following errors prevented the character from getting created</h2>
    <div class="danger alert-danger" role="alert">
      <ul>
        <% character_attribute.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

  <div class="col-md">
    <h2>Add new Attribute</h2>
    <%= form_for(character_attribute, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :icon %>
      </div>
      <div class="col-sm-10">
        <%= f.file_field :icon, accept: 'image/jpeg, image/gif, image/png' %>
      </div>
    </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :attribute_name %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :attribute_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :attribute_value %>
        </div>
        <div class="col-sm-10">
          <%= f.number_field :attribute_value, placeholder: "1-100", class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-10">
        <%= f.hidden_field :character_id, value: @character.id %>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-md'%>
        </div>
      </div>

    <% end %>
  </div>
