<h1>Showing selected Attribute</h1>
<div class="card" style="width: 20rem;">
  <%= image_tag(@character_attribute.icon.url, size: "30x30") if @character_attribute.icon? %>
  <div class="card-body">
    <h4 class="card-title"><%= @character_attribute.attribute_name %></h4>
    <p> <%= @character_attribute.attribute_value %> </p>
    <%= link_to 'Attributes', character_attribute_path(@character_attribute), class: "btn btn-primary" %>
    <%= link_to 'Edit', edit_character_attribute_path(@character_attribute), class: "btn btn-primary" %>
    <%= link_to 'Delete', character_attribute_path(@character_attribute), method: :delete, data: {confirm: "Are you sure you want to delete this character?"}, class: "btn btn-primary" %>
  </div>

</div>
