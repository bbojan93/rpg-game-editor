<% if @character.errors.any? %>
  <h2>The following errors prevented the character from getting created</h2>
    <div class="danger alert-danger" role="alert">
      <ul>
        <% @character.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@character, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-10">
          <%= f.select :name, Character.names.keys, prompt: "Character class", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :avatar %>
        </div>
        <div class="col-sm-10">
          <%= f.file_field :avatar, accept: 'image/jpeg, image/gif, image/png' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg'%>
        </div>
      </div>
      <div class="col-md-4 offset-md-4">
        <%= link_to '[Back to characters]', characters_path %>
      </div>
    <% end %>
  </div>
</div>
